{{#each this}}
    <li class="cards__item">
        <img class="cards__img" src="{{images.[3].url}}" alt="" width="180" height="227" />
        <h3 class="item__title">{{name}}</h3>
        <p class="item__date">{{dates.start.localDate}}</p>
        <p class="item__location">
        <svg width="7" height="10" class="item__icon">
            <use href="./images/sprite.svg#icon-location"></use>
        </svg>
        {{_embedded.venues.[0].city.name}}
        <p class="item__location">{{_embedded.venues.[0].name}}</p>
        </p>
        </li>
{{/each}}